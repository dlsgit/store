<h1><a href="#" onclick="alert('Hello world!'); return false;">Hello world! (JS version)</a></h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Time:</b>
  <%= Time.now %>
</p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p>
  <b>Released on:</b>
  <%= @product.released_on %>
</p>

<p>
  <b>Category:</b>
  <%= @product.category.name %>
</p>

<p>
  <b>Rating:</b>
  <%= @product.rating %>
</p>

<p>
  <b>Discontinued:</b>
  <%= @product.discontinued %>
</p>



<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<hr>

<a href="#" class="popup_dialog">Show a popup</a>

<div id="dialog" title="Basic dialog">
  <p>This is the default dialog which is useful for displaying information. The dialog window can be moved, resized and
    closed with the 'x' icon.</p>
</div>

<a href="#" class="new_review_popup">Add a review</a>

<div id="hidden_review_form" style="display: none">
  <%= form_for([@product, @product.reviews.build], :html => {:id => "new_review_form"}) do |f| %>
      <div class="field">
        <%= f.label :name %>
        <br/>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :content, "Review" %>
        <br/>
        <%= f.text_area :content %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
</div>


<hr>

<h3 id="reviews_count"><%= pluralize(@product.reviews.size, "Review") %></h3>

<div id="reviews">
  <%= render :partial => @product.reviews %>
</div>